<div id="modale2" class="modale" >
    <div class="cooffee-title">
        <h2>Connexion</h2>
        <img src="{{ asset('images/icones/icons-coffee.png') }}" alt="Icône d'une tasse à café">
    </div>
    {% if error %}
        <div class="gestion-erreurs">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <form action="{{ path('app_actu') }}" method="post" id="login">
        <label for="username">Email:</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}">
        <label for="password">Password:</label>
        <input type="password" id="password" name="_password">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <button type="submit" name="login" class="customButton1">Envoyer</button>
    </form>
</div>