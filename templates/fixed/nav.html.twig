<nav>
    <div class="nav-mobile">
        {% if not user  %}
        {% else %}
        {% if app.request.getPathInfo() == '/O-eeffoc/Actu' %}
            <a href="{{ path('app_gestion', { 'id' : user.id }) }}">
                <img src="{{ asset('images/icones/profil.svg') }}" alt="">
            </a>
        {% else %}
            <a href="{{ path('app_actu') }}">
                <img src="{{ asset('images/icones/home.svg') }}" alt="">
            </a>
        {% endif %}
            <a class="enveloppe-count" href="{{ path('app_messenger', { 'id' : user.id }) }}">
                <img src="{{ asset('images/icones/mail.svg') }}"  alt="">
                {% set unreadCount = 0 %}
                {% for messages in messageNotif %}
                    {% if messages.isRead == 0 and messages.recipient.id == app.user.id%}
                        {% set unreadCount = unreadCount + 1 %}
                    {% endif %}
                {% endfor %}
                <div class="count-messages">
                    {{ unreadCount }}
                </div>
            </a>
            <a href="{{ path('app_home') }}">
                <img src="{{ asset('images/icones/hearth.svg') }}" alt="">
            </a>
            <button id="myBtn">
                <img src="{{ asset('images/icones/groupe.svg') }}" alt="">
            </button>

            <div id="myModal" class="modalUserSearch">
                <div class="modal-content">
                    <span class="close">&times;</span>
                    {{ component('user_search') }}
                </div>
            </div>
            <script>
                var modal = document.getElementById("myModal");
                var btn = document.getElementById("myBtn");
                var span = document.getElementsByClassName("close")[0];
                btn.onclick = function() {
                    modal.style.display = "block";
                }
                span.onclick = function() {
                    modal.style.display = "none";
                }
                window.onclick = function(event) {
                    if (event.target == modal) {
                        modal.style.display = "none";
                    }
                }
            </script>
        {% endif %}
    </div>

    <div class="nav-desktop">
        {% if not user  %}
                <img src="{{ asset('images/icones/home.svg') }}" alt="">
